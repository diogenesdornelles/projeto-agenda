<dialog class="update-contact">
  <p>Alterar informações</p>
  <section id="container-dialog">
    <form action="" method="get" class="form-update-contact">
      <label for="contact-new-name">Nome: </label> <input type="text" id="contact-new-name" placeholder="Nome" pattern="[A-Za-zÀ-ú0-9 ]*" required>
      <label for="contact-new-surname">Sobrenome: </label><input type="text" id="contact-new-surname" placeholder="Sobrenome" required pattern="[A-Za-zÀ-ú0-9 ]*">
      <label for="contact-new-email">E-mail: </label><input type="email" id="contact-new-email" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
      <label for="contact-new-phone">Telefone: </label><input type="tel" id="contact-new-phone" placeholder="Telefone" required pattern="[0-9]{11}">
      <label for="contact-new-birthday">Data de nascimento: </label><input type="date" id="contact-new-birthday" placeholder="Data de nascimento" required>
      <div class="gender-option">
        <label for="gender-male">Gênero masculino</label><input type="radio" name="gender" id="contact-new-gender-male" value="masculino" checked>
        <label for="gender-female">Gênero feminino</label><input type="radio" name="gender" id="contact-new-gender-female" value="feminino">
      </div>
      <label for="contact-new-cpf">CPF: </label><input type="text" id="contact-new-cpf" placeholder="CPF" pattern="[0-9]{11}" required inputmode="number" minlength="11" maxlength="11" autocomplete="off">
      <div class="btns-dialog">
        <button id="dialog-btn-send" data-title="Alterar um contato existente">Alterar</button>
        <button id="dialog-btn-close" data-title="Fechar painel">Fechar</button>
      </div>
    </form>
  </section>
</dialog>
